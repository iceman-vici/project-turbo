{
  "manifest_version": 3,
  "name": "Turbo - Dialpad Integration",
  "version": "1.0.0",
  "description": "Turbo - Automated calling with Dialpad CTI integration",
  "permissions": [
    "storage",
    "activeTab",
    "tabs",
    "scripting"
  ],
  "host_permissions": [
    "https://dialpad.com/*",
    "https://*.dialpad.com/*"
  ],
  "action": {
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "https://dialpad.com/*",
        "https://*.dialpad.com/*"
      ],
      "js": ["dialpad-integration.js"],
      "run_at": "document_end"
    },
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ]
}